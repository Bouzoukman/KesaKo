<?xml version="1.0" encoding="UTF-8"?>
<root>
	<server>
		<name>HSQLDB</name>
		<description>Start the SQL Server</description>
		<workDir>../SQL</workDir>
		<command>java -cp hsqldb.jar org.hsqldb.Server</command></server>
	<server>
		<name>SOLR</name>
		<description>Start the SOLR Server</description>
		<workDir>../SOLR</workDir>
		<command>java -jar start.jar</command></server>
	<server>
		<name>Source Watcher</name>
		<description>Start the KesaKo Source Watcher</description>
		<workDir>./</workDir>
		<command>java -cp kesako-watcher-311F2.0.jar kesako.watcher.WatcherSource</command></server>
	<server>
		<name>Index Watcher</name>
		<description>Start the KesaKo Index Watcher Server</description>
		<workDir>./</workDir>
		<command>java -Xmx1024m -cp kesako-watcher-311F2.0.jar kesako.watcher.WatcherIndex</command></server>
	<server>
		<name>Meta Watcher</name>
		<description>Start the KesaKo Meta Watcher Server</description>
		<workDir>./</workDir>
		<command>java -cp kesako-watcher-311F2.0.jar kesako.watcher.WatcherMeta</command></server>
	<server>
		<name>Index Error Watcher</name>
		<description>Start the KesaKo Index Error Watcher Server</description>
		<workDir>./</workDir>
		<command>java -cp kesako-watcher-311F2.0.jar kesako.watcher.WatcherIndexError</command></server>
</root>
